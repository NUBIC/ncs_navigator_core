- if @person.participant
  - consent = @person.participant.low_intensity? ? ParticipantConsent.low_intensity_consent_type_code : ParticipantConsent.general_consent_type_code
  .consent_link
    = determine_participant_consent_path(consent.local_code, consent.to_s, @person.participant, @contact_link)
    - if @person.participant.consented?(NcsCode.for_attribute_name_and_local_code(:consent_type_code, consent.local_code))
      %span{ :class => "consented" }
        Participant has consented.
