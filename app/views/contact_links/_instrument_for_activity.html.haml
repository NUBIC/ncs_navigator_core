- if activity.child_consent?
  = render "parental_permission_for_child_participation", :event => @event, :contact_link => @contact_link
  = render "activity_psc_action", :activity => activity
- elsif survey = Survey.most_recent_for_access_code(Survey.to_normalized_string(activity.instrument))
  = render "activity", :contact_link => contact_link, :survey => survey, :activity => activity, :person => person
- else
  = render "other_activity", :current_activity => @current_activity, :activity => activity