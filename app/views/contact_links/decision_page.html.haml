- title "Post Instrument Decision Page"

%p
  - if @survey
    = blank_safe(@person.to_s)
    - if @response_set.complete?
      has completed
    - else
      has taken
    Instrument -
    = @survey.title

.page_section
  %h3
    Edit Instrument Records
  %p
    - @contact_link.contact.contact_links.each do |contact_link|
      = link_to "Edit #{contact_link.instrument}", edit_instrument_contact_link_path(contact_link), :class => "edit_link icon_link"

.page_section
  %h3
    Administer another Instrument for this Event
  .instructional_note
    If there are other instruments associated with this event, you can choose to administer another instrument from
    the list below.
  = render 'instruments_for_upcoming_events' if @person

.page_section
  %h3
    Enter information about the Visit
  %p
    - if @contact_link.participant_visit_record
      = link_to "Update Participant Record of Visit (RVIS)", edit_participant_visit_record_path(@contact_link.participant_visit_record), :class => "edit_link icon_link"
    - else
      = link_to "Create Participant Record of Visit (RVIS)", new_participant_visit_record_path(:contact_link_id => @contact_link.id), :class => "new_link icon_link"

  - if ParticipantVisitConsent.visit_information_sheet_presented?(@event)
    %p
      - ParticipantVisitConsent.visit_types.each do |vt|
        .consent_link
          = determine_participant_visit_consent_path(vt[0], vt[1], @person.participant, @contact_link)

.page_section
  %h3
    End Interaction with Participant
  %p
    = link_to "Complete Contact and Event Records", edit_contact_link_path(@contact_link), :class => "edit_link icon_link"