%table.records
  %tr
    %th
      RECEIPT
    %th
      STORE
    %th
      SHIP 
    %th
      CONFIRM
  %tr.operations
    %td
      %div{:id => "receiving"}
        %ul
          - if not @specimens.blank?
            - @specimens.each do |sp|
              %li
                %a{ :href => edit_specimen_receipt_path(:id => sp.specimen_id), :class => "my_specimen_sample_receive", :id => sp.specimen_id}
                  = sp.specimen_id  
          - if not @samples.blank?
            - @samples.each do |s|
              %li
                %a{ :href => edit_sample_receipt_store_path(:id => s.sample_id), :class => "my_specimen_sample_receive", :id => s.sample_id }
                  = s.sample_id
    %td
      %div{:id => "storing"}
        %ul
          - if not @specimen_receipts_hash.blank?
            - @specimen_receipts_hash.each do |k, v|
              %li
                %a{ :href => new_specimen_storage_path(:container_id => k), :class => "my_specimen_sample_store", :id => k}
                  = "Storage container ID:"
                  = k
                  - v.each do |val|
                    %p{:class => "paragraph_shift"}
                      = val
    %td
      %div{:id => "shipping"}
        %ul
          %div{:id => "ship_samples"}
            = form_tag verify_samples_path do
              - if not @sample_receipt_stores.blank?
                %b Samples:
                = submit_tag "Ship", :class => "ship_samples_btn", :id => "ship_samples_btn", :disabled => true
                - @sample_receipt_stores.each do |srs|
                  %li
                    %input{:type=>"checkbox", :class => "sample_ship_checkbox", :id => srs.sample_id, :name=> "sample_id[]", :value => srs.sample_id, :checked=>false}
                    = srs.sample_id

          %div{:id => "ship_specimens"}
            = form_tag verify_specimens_path do
              - if not @specimen_receipts_hash_not_shipped.blank?
                %b Specimens:
                = submit_tag "Ship", :class => "ship_specimens_btn", :id => "ship_specimens_btn", :disabled => true
                - @specimen_receipts_hash_not_shipped.each do |k, v|
                  %li
                    %input{:type=>"checkbox", :class => "specimen_ship_checkbox", :id => k, :name=> "storage_container_id[]", :value => k, :checked=>false}
                    -#%a{ :href => new_specimen_storage_path(:container_id => k), :class => "my_specimen_ship", :id => k}
                    = "Storage container ID:"
                    = k
                    - SpecimenReceipt.where(:storage_container_id => k).each do |val|
                      %p{:class => "paragraph_shift"}
                        = val.specimen_id
    %td
      %div{:id => "confirm"}
        - if not @sample_shippings_not_received.blank?
          %div{:id => 'shipped_not_confirmed_table', :class => 'shipped_not_confirmed_table'}
            %b Samples:
            - @sample_shippings_not_received.each do |track_number, sample_shippings|
              %p{:class => "paragraph_shift"}
                = link_to track_number, {:controller => "sample_receipt_confirmations", :action => "index", :tracking_number => track_number}, :class => "confirm_link", :id => "confirm_link"
        - if not @specimen_shippings_not_received.blank?
          %div{:id => 'shipped_not_confirmed_specs_table', :class => 'shipped_not_confirmed_specs_table'}
            %b Specimens:
            - @specimen_shippings_not_received.each do |specimen_shipping|
              %p{:class => "paragraph_shift"}
                = link_to specimen_shipping.shipment_tracking_number, {:controller => "specimen_receipt_confirmations", :action => "index", :tracking_number => specimen_shipping.shipment_tracking_number}, :class => "confirm_link", :id => "confirm_link"

