- title "Field Activity Report"

.page_section
  .records_header
    .page_entries_info
      = raw page_entries_info @fieldworks
  %table.records
    %tr
      %th
        ID
      %th
        Generated by
      %th
        Status
    - @fieldworks.each do |fw|
      %tr{:class => cycle('even_record', 'odd_record') + ' sync_attempt'}
        %td.fieldwork_id
          = fw.fieldwork_id
        %td.originator
          = fw.staff_id
        %td.status
          = latest_merge_status(fw)

  = will_paginate @fieldworks
