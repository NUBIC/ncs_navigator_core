!!!

%html{ :xmlns =>"http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en" }
  %head
    %meta{ "http-equiv" => "content-type", :content => "text/html;charset=UTF-8" }
    %title
      = show_title? ? "NCS Navigator :: " + yield(:title) : "NCS Navigator"
    %link{ :rel=>"icon", :type=>"image/gif", :href=>"/images/favicon.gif"}
    = stylesheet_link_tag('application')
    = javascript_include_tag("application")
    = csrf_meta_tag
    = yield :head

  %body.bp.ncs
    #container
      #header
        = render 'partials/current_user', :current_user => current_user
        #app_name
          = link_to "NCS Navigator", root_path
          - if show_title?
            %span{ :id => "title_separator" }
              = "::"
            = yield(:title)
      #main
        - flash.each do |message_type, message|
          %div{ :class => "flash_message", :id => "flash_#{message_type}" }
            = message
        #content    
          = yield
      #footer
        = render 'partials/footer'