.page_section
  .psc_registration
    %b
      Upcoming Activities

  - if recruitment_strategy.pbs? && !@participant.eligible?
    CANDIDATE DETERMINED INELIGIBLE.
  - else
    = render "/people/schedule_or_perform_event", :participant => @participant, :person => @person

    .schedule
      - if @participant_activity_plan && !@participant.pending_events.blank?
        %b
          Activities for Pending Events
        .activities
          - e = @participant.pending_events.first
          - @participant_activity_plan.activities_for_event(e.to_s).each do |a|
            .activity
              %span{ :class => "scheduled_date" }
                = a.date
              %span{ :class => "scheduled_time" }
                = a.time
              %span{ :title => a.current_state, :class => "#{a.current_state}_link" }
                &nbsp;
              = a.activity_name
      - else
        Subject does not have a schedule matching pending events
