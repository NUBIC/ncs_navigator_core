.page_section
  .relationships
    %b
      Relationships
    - if participant.participant_person_links.blank?
      %p
        No relationships exist at this time.
    - else
      %table.records
        %tr
          %th Select
          %th Name
          %th Relationship Type
        - participant.participant_person_links.each do |ppl|
          %tr{ :class => cycle('even_record', 'odd_record') }
            %td
              = link_to "Edit Person Record", edit_person_path(ppl.person), :class => "edit_link icon_link"
              = link_to "View", person_path(ppl.person), :class => "show_link icon_link"
            %td
              = blank_safe(ppl.person.name)
            %td
              = ppl.relationship

  .links
    = link_to 'New Person', new_person_path(:participant_id => @participant), :class => "add_link icon_link"
