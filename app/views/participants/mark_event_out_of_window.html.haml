= title "Out of Window Events"
.page_section

  = render "participants/header_information", :person => @person, :participant => @participant

  .pending_events
    %b
      Mark Event Out of Window
    - @participant.pending_events.each do |event|
      .pending_event
        - epoch = @participant.high_intensity? ? PatientStudyCalendar::HIGH_INTENSITY : PatientStudyCalendar::LOW_INTENSITY
        = "#{epoch}: #{event.to_s}"
        = form_for(@participant, :url => process_mark_event_out_of_window_participant_path(@participant)) do |f|
          = f.submit "Mark Out of Window", :confirm => "Are you certain that you have missed the '#{event}' Event and would like to mark it 'Out of Window'?"
