.page_section
  .intensity
    %b
      Hi/Lo
    %br
      = @participant.high_intensity? ? "High Intensity Participant" : "Low Intensity Participant"
  .pregnancy_probability_group
    %b
      Pregnancy Probability Group
    %br
      = @participant.ppg_status
      - if @participant.ppg_status.blank?
        %span.warning
          No PPG Assigned
  .consent
    %b
      Consented?
    %br
      = @participant.consented?
  .withdrawn
    %b
      Withdrawn?
    %br
      = @participant.withdrawn?
  .upcoming_events
    %b
      Upcoming Events
    %br
    - if @participant.upcoming_events.blank?
      No Upcoming Events
    - else
      = @participant.upcoming_events.to_sentence
      %br
      - @participant.upcoming_events.each do |segment|
        %p
          %b
            = "Instruments from PSC for #{segment}"
          %br
          - if activities = psc.activities_for_segment(@participant, segment)
            - activities.each do |activity|
              - instrument = InstrumentEventMap.instrument_for_activity(activity)
              - if Survey.where(:title => instrument).count > 0
                %span.known_instrument
                  = "#{activity}"
              - else
                = "#{activity}"
              %br
  .consents
    %b
      Consents
    - if @participant.participant_consents.blank?
      %p
        No consent records exist for this participant.
    - else
      %table.records
        %tr
          %th
            Type
          %th
            Consent Given
          %th
            Consent Date
          %th
            Who Consented
          %th
            Consent Withdrawn Date
          %th
            Who Withdrew
        - @participant.participant_consents.each do |consent|
          %tr{ :class => cycle('even_record', 'odd_record') }
            %td
              = link_to consent.consent_type, edit_participant_consent_path(consent, :consent_type => consent.consent_type, :consent_type_code => consent.consent_type_code), :class => "edit_link icon_link"
            %td
              = consent.consent_given
            %td
              = consent.consent_date
            %td
              = consent.who_consented
            %td
              = consent.consent_withdraw_date
            %td
              = consent.who_wthdrw_consent
