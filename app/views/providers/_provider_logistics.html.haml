%tr{ :class => "provider_logistic fields row" }
  %td.select_col
    %span{ :class => "hide" }
      = render "shared/inline_ncs_code_select", { :f => f, :code => :psu_code, :label_text => "PSU", :default_value => @psu_code, :inline => true, :html_attrs => {} }
    = render "shared/inline_ncs_code_select", { :f => f, :code => :provider_logistics_code, :label_text => "Logistic", :other => :provider_logistics_other, :html_attrs => {} }

    .comment
      = f.label :comment
      %br
      = f.text_area :comment, :class => "provider_logistics_comment"

    .completion_date
      = f.label :completion_date
      = f.text_field :completion_date, :class => :datepicker

  %td.remove_col
    = link_to_remove_fields 'Remove', f, :provider_logistics
:javascript
  $(document).ready(function() {
    setCompletionDateForNoneLogistic()
  });
