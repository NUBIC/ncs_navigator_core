.page_section
  - if SampleReceiptShippingCenter.all.blank? or SpecimenProcessingShippingCenter.all.blank?
    = "Please configure your shipping center's address and ID before continuing."
    - if SampleReceiptShippingCenter.all.blank?
      %p
        = link_to 'Set up Sample Receipt Shipping Center', new_sample_receipt_shipping_center_path, :class => "edit_link icon_link"
    - if SpecimenProcessingShippingCenter.all.blank?
      %p
        = link_to 'Set up Specimen Processing Shipping Center', new_specimen_processing_shipping_center_path, :class => "edit_link icon_link"
  - else
    %div{:id =>"process_tabs", :class => "processing"}
      %table.records
        %tr
          %th
            RECEIPT
          %th
            STORE
          %th
            SHIP 
          %th
            CONFIRM
        %tr.operations
          %td
            %div{:id => "receiving"}
              %ul
                - @specimens.each do |sp|
                  %li
                    %a{ :href => new_specimen_receipt_path(:specimen_id => sp.specimen_id), :class => "my_specimen_sample_receive", :id => sp.specimen_id}
                      = sp.specimen_id  
                - @samples.each do |s|
                  %li
                    %a{ :href => new_sample_receipt_store_path(:sample_id => s.sample_id), :class => "my_specimen_sample_receive", :id => s.sample_id }
                      = s.sample_id
          %td
            %div{:id => "storing"}
              %ul
                - @specimen_receipts_hash.each do |k, v|
                  %li
                    %a{ :href => new_specimen_storage_path(:container_id => k), :class => "my_specimen_sample_store", :id => k}
                      = "Pressure bag:"
                      = k
                      - v.each do |val|
                        %p{:class => "paragraph_shift"}
                          = val
          %td
            %div{:id => "shipping"}
              %ul
                %div{:id => "ship_samples"}
                  = form_tag verify_samples_path do
                    %b Samples:
                    = submit_tag "Ship", :class => "ship_sample_btn", :id => "ship_samples_btn"
                    - @sample_receipt_stores.each do |srs|
                      %li
                        %input{:type=>"checkbox", :class => "sample_ship_checkbox", :id => srs.sample_id, :name=> "sample_id[]", :value => srs.sample_id, :checked=>false}
                        -#%a{ :href => new_sample_receipt_store_path(:sample_id => srs.sample_id), :class => "my_sample_ship", :id => srs.sample_id }
                        = srs.sample_id

                %div{:id => "ship_specimens"}
                  = form_tag verify_specimens_path do
                    %b Specimens:
                    = submit_tag "Ship", :class => "ship_specimen_btn", :id => "ship_specimens_btn"
                    - @specimen_receipts_hash_not_shipped.each do |k, v|
                      %li
                        %input{:type=>"checkbox", :class => "specimen_ship_checkbox", :id => k, :name=> "storage_container_id[]", :value => k, :checked=>false}
                        -#%a{ :href => new_specimen_storage_path(:container_id => k), :class => "my_specimen_ship", :id => k}
                        = "Pressure bag:"
                        = k
                        - SpecimenReceipt.where(:storage_container_id => k).each do |val|
                          %p{:class => "paragraph_shift"}
                            = val.specimen_id
                    
              
          %td
            %div{:id => "confirm"}
              -#
                - @specimens.each do |sp|
                  = sp.specimen_id
                  %br
                - @samples.each do |s|
                  = s.sample_id
                  %br                            
        -#%tr
          -#%td{:colspan => '4'}
    %div{:id => "displaying", :class => "display records"}
      = "DISPLAYING???"
