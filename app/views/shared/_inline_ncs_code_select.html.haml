- default_value ||= nil
- other ||= nil
- date ||= nil
- inline ||= nil
- html_attrs ||= { :class => "required" }

= f.label code, label_text
- f.object.send("#{code}=", default_value) if default_value
= f.select(code, NcsCode.ncs_code_lookup(code), { :include_blank => "-- Select #{label_text} --" }, html_attrs)

- if other
  - if inline
    = f.label other, "#{label_text} (Other)"
    = f.text_field other
  - else
    %br
      = f.label other, "#{label_text} (Other)"
      = f.text_field other